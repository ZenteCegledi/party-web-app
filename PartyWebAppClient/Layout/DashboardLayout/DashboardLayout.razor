@namespace PartyWebAppClient.Layout

@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
@inject IUserService UserService

<FluentLayout class="container">
	<nav class="navbar navbar-expand-lg rounded-4 mt-3"
		style="background-color: #fff; box-shadow: 0 2px 4px 0 rgba(0,0,0,.1);">
		<div class="container-fluid">
			<div class="d-flex w-100 justify-content-between">
				<!-- Left group: Brand link -->
				<a class="navbar-brand" href="/">PartyWebApp</a>

				<!-- Center group: Navigation links -->
				<div class="collapse navbar-collapse justify-content-center" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="#">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Events</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Locations</a>
						</li>
					</ul>
				</div>

				<!-- Right group: AuthorizeView component -->
				<div class="d-flex align-items-center">
					<AuthorizeView>
						<Authorized>
							<FluentButton style="margin-left: 8px"
								IconStart="@(new Icons.Regular.Size16.DoorArrowLeft())"
								OnClick="async () => await SignOutAsync()">
								Sign Out
							</FluentButton>
						</Authorized>
					</AuthorizeView>
				</div>
			</div>
		</div>
	</nav>




	<FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
		<FluentBodyContent Class="body-content">
			<div class="content">
				@Body
			</div>
		</FluentBodyContent>
	</FluentStack>

	<FluentToastProvider MaxToastCount="6" />
</FluentLayout>