@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject IUserService UserService
@inject IStringLocalizer<Resources> Localize;

<FluentLayout>
    <FluentHeader>
        <a href="/" style="color: unset; text-decoration: none;">PartyWebApp</a>
        <FluentSpacer />
        <AuthorizeView>
            <NotAuthorized>
                <FluentAnchor Href="/signin" IconStart="@(new Icons.Regular.Size16.PersonArrowRight())">
                    @Localize["SignIn"]
                </FluentAnchor>
            </NotAuthorized>
            <Authorized>
                <FluentAnchor Href="/dashboard" IconStart="@(new Icons.Regular.Size16.Home())">
                    @Localize["Dashboard"]
                </FluentAnchor>
            </Authorized>
        </AuthorizeView>
    </FluentHeader>
    @* <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%"> *@
    <FluentBodyContent Class="body-content">
        <div class="content">
            @Body
        </div>
    </FluentBodyContent>
    @* </FluentStack> *@

    <FluentToastProvider MaxToastCount="6" />
</FluentLayout>