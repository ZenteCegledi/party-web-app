@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<FluentLayout>
    <FluentHeader>
        <a href="/" style="color: unset; text-decoration: none;">PartyWebApp</a>
        <FluentSpacer />
        @if (!NavigationManager.Uri.Contains("dashboard"))
        {
            <a href="/signin">
                <FluentButton IconStart="@(new Icons.Regular.Size16.PersonArrowRight())">
                    Sign In
                </FluentButton>
            </a>
        }
    </FluentHeader>
    <FluentStack Class=" main" Orientation="Orientation.Horizontal" Width="100%">
        @if (NavigationManager.Uri.Contains("dashboard"))
        {
            <NavMenu />
        }
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>

    <FluentToastProvider MaxToastCount="5" />
</FluentLayout>
