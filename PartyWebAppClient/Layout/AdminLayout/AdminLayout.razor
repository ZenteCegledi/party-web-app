@namespace PartyWebAppClient.Layout.AdminLayout

@inherits LayoutComponentBase;

<FluentLayout Class="container">

    <nav class="navbar navbar-expand-lg rounded-4 mt-3"
         style="background-color: #18a4bc; box-shadow: 0 2px 4px 0 rgba(0,0,0,.1);">
        <div class="container-fluid">
            <!-- Left group: Brand link -->
            <a class="navbar-brand text-white" href="/">PartyWebApp</a>
            <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Center group: Navigation links -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" aria-current="page" href="/dashboard">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/admin/events">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/admin/locations">Locations</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <FluentButton style="margin-left: 8px"
                                      IconStart="@(new Icons.Regular.Size16.DoorArrowLeft())"
                                      OnClick="async () => await SignOutAsync()">
                            Sign Out
                        </FluentButton>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </nav>

    <FluentStack Class="main overflow-visible" Orientation="Orientation.Horizontal" Width="100%">
        <FluentBodyContent Class="body-content overflow-visible">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>