@namespace PartyWebAppClient.Layout

@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
@inject IUserService UserService

@inject IStringLocalizer<Resources> Localize;

<FluentLayout class="container" Style="max-width: 800px; padding-bottom: 24px">
	<FluentCard class="navbar navbar-expand-lg rounded-4 mt-3">
		<div class="container-fluid">
			<div class="d-flex w-100 justify-content-between">
				<!-- Left group: Brand link -->
				<a class="navbar-brand" href="/">PartyWebApp</a>

				<!-- Center group: Navigation links -->
				<div class="collapse navbar-collapse justify-content-center" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<FluentAnchor Appearance="Appearance.Lightweight"
								IconStart="@(new Icons.Regular.Size20.Wallet())" Href="/dashboard">
								@Localize["Wallets"]
							</FluentAnchor>
						</li>
						<li class="nav-item">
							<FluentAnchor Appearance="Appearance.Lightweight"
								IconStart="@(new Icons.Regular.Size20.Location())" Href="/dashboard/locations">
								@Localize["Events"]
							</FluentAnchor>
						</li>
					</ul>
				</div>

				<!-- Right group: AuthorizeView component -->
				<div class="d-flex align-items-center">
					<AuthorizeView>
						<Authorized>
							<FluentButton style="margin-left: 8px"
								IconStart="@(new Icons.Regular.Size20.DoorArrowLeft())"
								OnClick="async () => await SignOutAsync()">
								@Localize["SignOut"]
							</FluentButton>
						</Authorized>
					</AuthorizeView>
				</div>
			</div>
		</div>
	</FluentCard>

	<FluentStack Class="main overflow-visible" Orientation="Orientation.Horizontal" Width="100%">
		<FluentBodyContent Class="body-content overflow-visible">
			<div class="content">
				@Body
			</div>
		</FluentBodyContent>
	</FluentStack>

	<FluentToastProvider MaxToastCount="6" />
</FluentLayout>