@using PartyWebAppCommon.Enums
<FluentCard Height="300px" class="mb-2">
    
    <FluentBadge Appearance="Appearance.Lightweight">
        <FluentIcon Value="@(new Icons.Regular.Size16.Calendar())"/> @Event.StartDateTime.ToString("yyyy-MM-dd HH:mm")
    </FluentBadge>
    <br>
    <FluentBadge Appearance="Appearance.Lightweight">
        <FluentIcon Value="@(new Icons.Regular.Size16.Location())" class=""/> @Event.Location?.Name
    </FluentBadge>

    <h1 class="mb-1 font-monospace">@Event.Name</h1>
    <p>@Event.Description</p>

    <div class="fixed-bottom d-flex flex-column align-items-center">
        <h5 class="mb-3">
            <img class="rounded-circle" height="20" src="@currencyMap[CurrencyType.CREDIT].image" style="object-fit: cover" width="20" alt="" />
            <span class="ml-2">@Event.Price @currencyMap[CurrencyType.CREDIT].symbol</span>
        </h5>
        <FluentButton Appearance="Appearance.Accent" class="align-self-end w-100">
            <FluentIcon Value="@(new Icons.Regular.Size20.TicketDiagonal())" Color="@Color.Lightweight" Slot="start" />
            Buy Ticket
        </FluentButton>
    </div>
</FluentCard>